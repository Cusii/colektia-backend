<%- include('partials/head')-%> 
  <body>
    <%- include('partials/header')%> 
<p>crear peliculas</p>
<form action="/peliculas/editar/<%= pelicula.id_pelicula %>" method="POST">
    <div>
        <label for="">Titulo</label>
        <input type="text" name="titulo" value="<%= pelicula.nombre %>">
    </div>
    <div>
        <label for="">Descripcion</label>
        <input type="text" name="descripcion" value="<%= pelicula.descripcion %>">
    </div>
    <div>
        <label for="">Foto</label>
        <input type="text" name="foto" value="<%= pelicula.foto %>">
    </div>
    <div>
        <label for="">Genero</label>
        <select name="genero" id="">
            <% for( let index = 0; index < generos.length; index++ ) { %>
                <% if (generos[index].id_genero==pelicula.id_genero) { %>
                    <option value="<%= generos[index].id_genero %> selected">
                        <%= generos[index].genero %> 
                    </option>
                 
                <% } else {%>
                    <option value="<%= generos[index].id_genero %> ">
                        <%= generos[index].genero %> 
                    </option>

                    <% }%>
              
            <% } %>
            
        </select>
    </div>
    <button type="submit">editar</button>    

</form>

<%- include('partials/scripts')%> 
<%- include('partials/footer')%> 
</body>
</html>
